@model IEnumerable<YapılacaklarListesi.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Category List</h2>
<hr />

<p>
    @Html.ActionLink("Create New Category Name", "Create",null,new {@class="btn btn-primary" })
</p>
<hr />
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.KategoriAdi)
        </th>
        <th  width="14%"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.KategoriAdi)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id },new { @class="btn btn-warning btn-xs"})
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
